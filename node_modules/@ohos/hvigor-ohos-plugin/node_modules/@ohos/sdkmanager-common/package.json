{
  "name": "@ohos/sdkmanager-common",
  "version": "2.17.4",
  "description": "OpenHarmony SDK common lib",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run generate-certificate && tsc && ts-node copy-res.ts",
    "report": "eslint --ext .js,.ts . -f checkstyle -o eslint.xml || exit 0",
    "pretty": "prettier --write **/*.{ts,tsx,json,css}",
    "prepack": "npm run ugly-build",
    "ugly-build": "node uglify.js",
    "generate-certificate": "node script/generateCertificate.js"
  },
  "ohos": {
    "org": "huawei"
  },
  "author": "huawei",
  "keywords": [
    "sdkmanager"
  ],
  "license": "SEE LICENSE IN LICENSE.txt",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.11.10",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "eslint": "^8.21.0",
    "glob": "7.2.0",
    "prettier": "^2.2.1",
    "shelljs": "^0.8.5",
    "terser": "^5.12.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  },
  "files": [
    "/build/res",
    "/build/src",
    "/build/index.js",
    "/build/index.d.ts"
  ],
  "dependencies": {
    "axios": "1.6.7",
    "jszip": "3.10.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  }
}
