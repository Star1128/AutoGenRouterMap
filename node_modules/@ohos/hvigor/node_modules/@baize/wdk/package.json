{
  "name": "@baize/wdk",
  "version": "0.4.0",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ],
      "dist/*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "lint": "eslint src/**/*.{ts,tsx} --format=codeframe",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "test": "jest --config jest.config.js --coverage",
    "apireport": "rimraf docs/ && api-extractor run --local --verbose",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "docs": "npm run build && npm run apireport && api-documenter markdown -i ./.apiReport -o ./docs",
    "benchmark": "ts-node __benchmarks__/index.ts"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 10",
    "npm": ">= 6.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.13",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@microsoft/api-documenter": "^7.22.33",
    "@microsoft/api-extractor": "^7.36.4",
    "@nce/eslint-config-nce": "^1.2.2",
    "@types/benchmark": "^2.1.2",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.197",
    "babel-jest": "29.5.0",
    "benchmark": "^2.1.4",
    "commitizen": "^3.1.2",
    "conventional-changelog-cli": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.11.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "husky": "^2.7.0",
    "jest": "29.5.0",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.1",
    "ts-jest": "29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4",
    "validate-commit-message": "^3.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "core-js": "3.31.1"
  }
}
